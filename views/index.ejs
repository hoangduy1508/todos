<%- include('header'); %>

    <div class="main">
        <div id="tieude">
            <h1 class="title"> {{ appName }}<span class="label label-info">{{todos.length}}</span></h1>

            <div class="user">
                <h2>Wellcome {{ user.email }}
                </h2>
                <a class="btn" href="/profile">Profile</a>
                <a class="btn btn-danger" href="/logout">Logout</a>
            </div>

        </div>
        <div class="container" id="body">

            <div id="todo-list">
                <div class="row">
                    <div class=" col-sm-12">
                        <form>
                            <div class="form-group col-sm-8">

                                <input type="hidden" name="emailid" ng-init="email={{user.email}}" ng-model="emailid">
                                <input ng-model="formdata.text" class="form-control text-center" type="text" placeholder="Nhập công việc">
                            </div>
                            <button ng-disabled="!formdata.text" ng-click="createTodo()" id="nhapvao" class="form-control col-sm-4" type="submit" class="btn btn-primary">Nhập vào</button>
                        </form>
                    </div>
                </div>
                <table class="table table-hover table-border">
                    <thead>
                        <tr>
                            <th class="text-center">Trạng thái</th>
                            <th>Nội dung công việc</th>
                            <th>Chức năng</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr ng-repeat="todo in todos">
                            <td class="text-center"><input type="checkbox" ng-model="todo.isDone" ng-change="updatetodo(todo)"></td>
                            <td><span onaftersave="updatetodo(todo)" ng-class="{gachngang: todo.isDone}" editable-text="todo.text" e-form="textBtnForm">{{todo.text}}</span></td>
                            <td class="text-center">
                                <div class="chucnang">
                                    <a href="#" ng-click="deletetodo(todo)"><i class="fas fa-times"></i></a>
                                    <a href="#" ng-click="textBtnForm.$show()" ng-hide="textBtnForm.$visible"><i class="fas fa-pen"></i></a>
                                </div>
                            </td>
                        </tr>

                    </tbody>
                </table>

            </div>

        </div>
    </div>

    <%- include('fooder'); %>